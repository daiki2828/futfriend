<h2>プロフィールの編集</h2>
<div class="col-md-8">
  <%= form_with model:@user, local:true do |f| %>
      <%= render 'layouts/errors', model: @user %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control col-md-4" %>
      </div>
      <div class="form-group">
        <%= f.label :profile_image, "プロフィール画像" %>
        <%= f.file_field :profile_image, class: "form-control-file", accept: 'image/*' %>
       </div>
       <div class="form-group">
        <%= f.label :profile %>
        <%= f.text_area :profile, class: "form-control col-md-6" %>
       </div>
       <div class="form-group">
        <%= f.label :prefecture_code, "都道府県" %>
        <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name %>
       </div>
       <div class="form-group">
        <%= f.submit "編集内容を保存", class: 'btn btn-secondary' %>
        <%= link_to "退会する", users_quit_path, class: "btn btn btn-danger" %>
        </div>
  <% end %>
</div>