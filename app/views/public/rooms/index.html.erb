<div class="col-md-8">
  <h2><i class="fas fa-mail-bulk"></i>: DM</h2>
  <table class="table table-borderless table-hover mt-3">
    <% @another_user_rooms.each do |user_room| %>
    <tbody>
      <td><%= link_to chat_path(user_room.user_id) do %>
            <%= image_tag user_room.user.get_profile_image, style: "border-radius: 50%; width: 50px; height: 50px;" %>
           <% end %>
      </td>
      <td><%= link_to chat_path(user_room.user_id) do %>
           <strong><div class="text-dark"><%= user_room.user.name %></div></strong>
           <div class="text-secondary"><%= user_room.room.chats.order(created_at: :desc).take.try(:message).truncate(10)  %></div>
           <% end %>
      </td>
    </tbody>
    <% end %>
  </table>
</div>