<div class="col-md-8">
  <h3 class="offset-md-3"><i class="fas fa-mail-bulk"></i>投稿</h3>
  <%= form_with model:@post, url: posts_path, local:true do |f| %>
    <div class="form-group">
      <%# 左上に文字を持っていきたい %>
      <%= f.text_field :body, class: "col-md-8 form-control", style: "height: 200px;", placeholder: "ここに" %>
    </div>
    <div class="form-group">
      <%= f.text_field :hashbody, class: "col-md-8 form-control" , placeholder: "#ハッシュタグ"  %>
    </div>
    <div class="action">
      <%= f.submit "投稿", class: "btn btn-success col-md-3 offset-md-5" %>
    </div>
  <% end %>
</div>