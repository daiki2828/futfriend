<div class="login">
  <div class="login-triangle"></div>
  <h2 class="login-header">Log in</h2>
  <div class="login-container">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "Email", class: "form-control" %>
    </div>

    <div class="field mt-3">
      <%= f.password_field :password, autocomplete: "current-password", :placeholder => "Passward", class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field mt-3">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions mt-3">
      <%= f.submit "Log in", style: "background: #28d; border-color: transparent; color: #fff; cursor: pointer;", class: "form-control" %>
    </div>
    <% end %>
    <h5 class="mt-3">ユーザー登録がお済みでない方</h5>
        <h6 class="text-center mr-3"><%= link_to "こちら", new_user_registration_path %>　から新規登録を行ってください。</h6>
  </div>
</div>