<h2>プロフィールの編集</h2>
  <%= form_with model: @user, url: admin_user_path(@user), local:true do |f| %>
      <%= render 'layouts/errors', model: @user %>
      
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :profile_image, "プロフィール画像" %>
        <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
       </div>
       
       <div class="form-group">
        <%= f.label :profile %>
        <%= f.text_area :profile, class: "form-control introduction" %>
       </div>
       
       <div class="form-group">
          <%= f.label :ユーザーステータス, class: "col-sm-4" %>
        <div class="form-check">
          <%= f.select :user_status, User.user_statuses.keys %>
        </div>
       </div>
       <div class="form-group">
        <%= f.submit "編集内容を保存", class: 'btn btn-secondary' %>
        </div>
  <% end %>