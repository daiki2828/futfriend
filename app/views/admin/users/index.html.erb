<div class='container px-5 px-sm-0 ml-md-3'>
  <div class='row'>
    <div class='col-12 px-0 mx-auto mt-3'>
      <h2>会員一覧</h2>
    </div>

      <table class='table table-hover shadow-lg mt-3'>
        <thead class="bg-light">
          <tr>
            <th>ユーザーID</th>
            <th><u>ユーザー名</u></th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody class="border-bottom">
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><u><%= link_to user.name ,admin_user_path(user)%></u></td>
              <td><%= user.email %></td>
              <td><%= user.user_status %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>